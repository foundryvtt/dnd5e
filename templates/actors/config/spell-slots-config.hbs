<section>
    {{#each overrides}}
    <ol class="unlist form-grid form-grid-20">
        {{#each this}}
        <li>
            <label class="input-stack">
                <span class="roboto-upper">{{ label }}</span>
                {{ numberInput value name=name min=0 step=1 placeholder=placeholder }}
            </label>
        </li>
        {{/each}}
    </ol>
    {{#unless @last}}<hr>{{/unless}}
    {{/each}}
</section>
