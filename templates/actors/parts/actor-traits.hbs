<div class="traits">
    <div class="form-group">
        <label>{{localize "SHAPER.Size"}}</label>
        <select class="actor-size" name="system.traits.size">
            {{#select system.traits.size}}
            {{#each config.actorSizes as |label size|}}
                <option value="{{size}}">{{label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>

    {{#unless isVehicle}}
    <div class="form-group {{system.traits.languages.cssClass}}">
        <label>{{localize "SHAPER.Languages"}}</label>
        <a class="trait-selector" data-options="languages" data-target="system.traits.languages"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.Languages')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each system.traits.languages.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>
    {{/unless}}

    <div class="form-group {{system.traits.di.cssClass}}">
        <label>{{localize "SHAPER.DamImm"}}</label>
        <a class="trait-selector" data-options="damageTypes" data-target="system.traits.di"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.DamImm')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each system.traits.di.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.dr.cssClass}}">
        <label>{{localize "SHAPER.DamRes"}}</label>
        <a class="trait-selector" data-options="damageTypes" data-target="system.traits.dr"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.DamRes')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each system.traits.dr.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.dv.cssClass}}">
        <label>{{localize "SHAPER.DamVuln"}}</label>
        <a class="trait-selector" data-options="damageTypes" data-target="system.traits.dv"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.DamVuln')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each system.traits.dv.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.ci.cssClass}}">
        <label>{{localize "SHAPER.ConImm"}}</label>
        <a class="trait-selector" data-options="conditionTypes" data-target="system.traits.ci"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.ConImm')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each system.traits.ci.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    {{#unless isVehicle}}
    <div class="form-group ">
        <label>{{localize "SHAPER.SpecialTraits"}}</label>
        <a class="config-button" data-action="flags"
           title="{{localize 'SHAPER.TraitConfig' trait=(localize 'SHAPER.SpecialTraits')}}">
            <i class="fas fa-cog"></i>
        </a>
    </div>
    {{/unless}}
</div>
