<fieldset class="card levels table" data-type="{{ configuration.data.type }}">
    <legend>{{ localize "DND5E.ADVANCEMENT.ScaleValue.FIELDS.scale.label" }}</legend>
    <div class="header">
        <span class="level-level">
            {{ localize "DND5E.AbbreviationLevel" }}
        </span>
        {{#each type.fields}}
        {{#unless options.hidden}}
        <span class="{{ @key }}-header">
            {{ label }}
        </span>
        {{/unless}}
        {{/each}}
    </div>
    <ol class="levels-list unlist">
        {{#each levels}}
        <li class="level">
            <div class="level-level">{{ @key }}</div>
            {{#each fields}}
            <div class="level-{{ @key }} {{~#if isPlaceholder}} placeholder{{/if}}">
                {{ formInput field name=name value=value input=input options=options placeholder=placeholder }}
            </div>
            {{/each}}
        </li>
        {{/each}}
    </ol>
</fieldset>
