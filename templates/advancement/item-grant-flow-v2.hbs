<div class="standard-form">
    {{#if abilities}}
    <fieldset>
        <legend>{{ localize "DND5E.SpellAbility" }}</legend>
        {{ formInput abilities.field name="ability" value=abilities.value options=abilities.options}}
    </fieldset>
    {{/if}}

    <div class="items-section card">
        <div class="items-header header">
            <h4 class="item-name">{{ localize "DND5E.ADVANCEMENT.ItemGrant.FIELDS.items.label" }}</h4>
        </div>
        <ul class="item-list unlist">
            {{#each items}}
            <li class="item flexrow" data-uuid="{{ uuid }}">
                <div class="item-name flexrow">
                    <img class="gold-icon" data-action="viewItem" src="{{ img }}" alt="{{ name }}">
                    <div class="name-stacked">
                        <div class="title">{{ name }}</div>
                    </div>
                </div>
                {{#if optional}}
                <div class="item-controls flexrow">
                    <dnd5e-checkbox name="{{ uuid }}" {{ checked checked }}></dnd5e-checkbox>
                </div>
                {{else}}
                <input type="hidden" name="{{ uuid }}" value="true" data-dtype="Boolean">
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>
