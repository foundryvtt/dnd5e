{{#if parts.length}}
<div class="dice-tooltip-collapser">
    <div class="dice-tooltip">
        {{#each parts}}
        <section class="tooltip-part">
            <div class="dice">
                {{#if icon}}
                <span class="part-method" data-tooltip aria-label="{{ localize method }}">
                    {{{ icon }}}
                </span>
                {{/if}}
                <ol class="dice-rolls">
                    {{#each rolls}}
                    <li class="roll {{ classes }}">{{{ result }}}</li>
                    {{/each}}
                </ol>
                <div class="total">
                    <span class="label">{{ flavor }}</span>
                    <span class="value">{{ total }}</span>
                </div>
            </div>
        </section>
        {{/each}}
    </div>
</div>
{{/if}}
