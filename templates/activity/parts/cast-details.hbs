<fieldset>
    <legend>{{ localize "DND5E.CAST.FIELDS.spell.label" }}</legend>
    {{ formField fields.spell.fields.ability value=source.spell.ability options=abilityOptions rootId=partId }}
    {{#if levelOptions}}
    {{ formField fields.spell.fields.level value=source.spell.level options=levelOptions rootId=partId }}
    {{/if}}
    {{ formField fields.spell.fields.properties value=source.spell.properties options=propertyOptions rootId=partId }}
    {{#with fields.spell.fields.challenge.fields as |fields|}}
    {{ formField fields.override value=../source.spell.challenge.override input=../inputs.createCheckboxInput
                 rootId=@root.partId }}
    {{#if ../source.spell.challenge.override}}
    {{ formField fields.attack value=../source.spell.challenge.attack rootId=@root.partId }}
    {{ formField fields.save value=../source.spell.challenge.save rootId=@root.partId }}
    {{/if}}
    {{/with}}
</fieldset>
